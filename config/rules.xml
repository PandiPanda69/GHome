<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE rules SYSTEM "rules.dtd">

<rules>
  <rule name="Allumage chauffage chambre">
    <actions>
      <activate device="chauffage" field="BUTTON_3">true</activate>
      <alert recipient="web">Temperature bases : allumage du chauffage.</alert>
    </actions>
    <conditions>
      <condition device="temp_chambre" field="TEMPERATURE" type="inf">500</condition>
    </conditions>
  </rule>
</rules>
